<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_background"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/imageViewLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:padding="5dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/android" />

        <ImageView
            android:padding="5dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/bluetooth" />

        <ImageView
            android:padding="5dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/arduino" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/appName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/imageViewLayout"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="monospace"
            android:padding="5dp"
            android:text="RC Contoller"
            android:textAlignment="center"
            android:textFontWeight="100"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonGroupLayout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/appName"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnBluetooth"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/round_btn"
            android:drawableRight="@drawable/right_icon"
            android:text="Bluetooth Ops" />

        <Button
            android:id="@+id/btnDrawTemplate"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/round_btn"
            android:drawableRight="@drawable/right_icon"
            android:text="Draw Template" />

        <Button
            android:id="@+id/btnSavedTemps"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_btn"
            android:drawableRight="@drawable/right_icon"
            android:text="Saved Template" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonGroupLayout"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:padding="5dp"
            android:text="Test Application v0.1"
            android:textAlignment="center"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>